{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ply extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Ply worker",
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}"
        }
    ]
}
